[Unit]
Description=PCG Dashboard Server
After=network.target postgresql.service

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/pcg-dashboard-mcp
Environment="DATABASE_URL=postgresql://postgres:pcg_secure_password@TAILSCALE_IP:5432/pcg"
Environment="RUST_LOG=info"
ExecStart=/home/ubuntu/pcg-dashboard-mcp/target/release/server
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
