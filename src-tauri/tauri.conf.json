{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Vibertas",
  "version": "0.1.0",
  "identifier": "com.okbventures.vibertas",
  "build": {
    "frontendDist": "../frontend/dist",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "cd ../frontend && npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Vibertas - Sovereign OS",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://localhost:* ws://localhost:* https://*.vercel.app"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "OKB Ventures",
    "category": "Productivity",
    "shortDescription": "Sovereign OS - Your Interface to the Mesh",
    "longDescription": "Vibertas is a sovereign operating system layer that connects you to the Alpha Protocol Network, enabling decentralized compute, privacy-first communication, and collective intelligence.",
    "iOS": {
      "minimumSystemVersion": "13.0"
    },
    "android": {
      "minSdkVersion": 24
    }
  }
}
